{
  // Configuration for debugging a Next.js application
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Next.js: Debug Development Server",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "console": "integratedTerminal",
      "env": {
        "PORT": "3000"
      },
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
